<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="Messenger_Mobile_App.Views.ConversationSettingsPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="20">
            <StackLayout Orientation="Horizontal">
                <Label Text="Conversation name: " FontSize="Medium"/>
                <Label Text="{Binding Name}" FontSize="Medium" FontAttributes="Bold"/>
            </StackLayout>
            <StackLayout HorizontalOptions="Start">
                <Button Text="Set nickname" FontSize="Small"/>
                <Button Text="Ignore notifications" FontSize="Small"/>
                <Button Text="Remove contact" FontSize="Small"/>
                <Button Text="Block contact" FontSize="Small"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>