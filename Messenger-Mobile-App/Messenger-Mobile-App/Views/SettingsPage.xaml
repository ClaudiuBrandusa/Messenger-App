<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="Messenger_Mobile_App.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical"  Padding="20">
            <StackLayout HorizontalOptions="Start">

                <Button Text="Change profile image" FontSize="Small"/>
                <Button Text="Change email address" FontSize="Small"/>
                <Button Text="Report a problem" FontSize="Small"/>
            </StackLayout>
            <StackLayout VerticalOptions="EndAndExpand">
                <Button Text="Back" Command="{Binding GoBackCommand}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>