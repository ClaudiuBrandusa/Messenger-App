@{
    Layout = "_Layout"; ViewBag.Title = "Chat Box";
}

<div class="chatbox">
    <div class="msg-header">
        <div class="msg-header-img">
            <img src="~/images/user2.png" style="max-width:100%; border-radius: 50%;" />
        </div>
        <div class="active">
            <h4>John Lewis</h4>
            <h6>3 hours ago...</h6>
        </div>
    </div>
    <div class="chat-page">
        <div class="msg-inbox">
            <div class="chats">
                <div class="msg-page">
                    <div class="received-chats">
                        <div class="received-chats-img">
                            <img src="~/images/user2.png" width="20" height="20" style="margin-top:-2%;" />
                        </div>
                        <div class="received-msg">
                            <div class="received-msg-inbox">
                                <p>Hi !! This is message from John Lewis</p>
                                <span class="time">11:01 PM | October 11 </span>
                            </div>
                        </div>
                    </div>
                    <div class="outgoing-chats">
                        <div class="outgoing-chats-msg">
                            <p>Hi !! This is message from me</p>
                            <span class="time">11:01 PM | October 11 </span>
                        </div>
                        <div class="outgoing-chats-img">
                            <img src="~/images/user1.jpg" width="20" height="20" style="margin-top:0.5%;" />
                        </div>
                    </div>
                    <div class="received-chats">
                        <div class="received-chats-img">
                            <img src="~/images/user2.png" width="20" height="20" style="margin-top:-2%;" />
                        </div>
                        <div class="received-msg">
                            <div class="received-msg-inbox">
                                <p>Hi !! This is 2nd message from John Lewis</p>
                                <span class="time">11:01 PM | October 11 </span>
                            </div>
                        </div>
                    </div>
                    <div class="outgoing-chats">
                        <div class="outgoing-chats-msg">
                            <p>Hi !! This is 2nd message from me</p>
                            <span class="time">11:01 PM | October 11 </span>
                        </div>
                        <div class="outgoing-chats-img">
                            <img src="~/images/user1.jpg" width="20" height="20" style="margin-top:0.5%;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="msg-bottom">
            <div class="bottom-icons">
                <i class="fa fa-plus-circle"></i>
                <i class="fa fa-camera"></i>
                <i class="fa fa-microphone"></i>
                <i class="fa fa-smile-o"></i>
            </div>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="write message..." />
                <div class="input-group-append">
                    <span class="input-group-text"><i class="fa fa-paper-plane"></i></span>
                </div>
            </div>
        </div>
    </div>
</div>
