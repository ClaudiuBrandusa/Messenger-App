@{
    Layout = "_Layout"; ViewBag.Title = "Register";
}

@model Register


<form asp-action="Register" class="registerbox">
    <img src="~/images/user.png" class="avatar" />
    <h1>Register Here</h1>
    <div class="form-group">
        <label asp-for="UserName" class="label-control"></label>
        <input type="text" asp-for="UserName" placeholder="Enter Username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="label-control"></label>
        <input type="email" asp-for="Email" placeholder="Enter Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="label-control"></label>
        <input type="password" asp-for="Password" placeholder="Enter Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="label-control"></label>
        <input type="password" asp-for="ConfirmPassword" placeholder="Enter Confirm Password" class="form-control" />
    </div>
    <div>
        <input type="submit" name="" value="Register" />
        <a href='/Profile/Login' style="margin-top:4rem" ;>Do have an account?</a>
    </div>
    <div class="validation-register" asp-validation-summary="All"></div>
</form>